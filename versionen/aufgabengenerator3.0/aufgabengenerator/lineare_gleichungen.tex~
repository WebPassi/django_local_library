\begin{aufgabe} ~ \\ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item 
- 10 x + 2 = -4
\item 
4 x + 5 = -4
\item 
- 5 x - 2 = -9
\item 
x + 8 = -8
\item 
- 4 x - 10 = 6
\item 
- 3 x - 9 = -6
\item 
x + 1 = 9
\item 
x + 5 = -2
\item 
3 x - 3 = 1
\end{enumerate} 
\end{multicols} 
\end{aufgabe} 
\begin{aufgabe} ~ \\ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item 
8 x - 10 = 6 x + 3
\item 
- 6 x - 8 = 6 x - 6
\item 
x - 8 = 7 x + 7
\item 
8 x - 5 = 4 x - 7
\item 
5 x + 4 = - 10 x + 9
\item 
2 x + 3 = - x - 4
\item 
- 8 x - 3 = - 3 x - 4
\item 
10 x + 4 = x + 3
\item 
9 x = - 9 x - 2
\end{enumerate} 
\end{multicols} 
\end{aufgabe} 
\begin{aufgabe} ~ \\ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item 
9(- 9 x - 2) = 6
\item 
-8(9 x - 3) = -7
\item 
5(5 x + 5) = -8
\item 
10(- 7 x + 7) = 1
\item 
-10(- 7 x - 1) = 9
\item 
-10(- 7 x - 1) = 0
\item 
-5(- 8 x) = -8
\item 
-7(4 x + 10) = -1
\item 
3(- 10 x + 1) = -4
\end{enumerate} 
\end{multicols} 
\end{aufgabe} 
\begin{aufgabe} ~ \\ 
\begin{multicols}{2} 
\begin{enumerate}[a)] 
\item 
8(x - 9) = -4(- 5 x - 8)
\item 
2(- 8 x + 10) = -10(8 x - 5)
\item 
-10(- 4 x + 2) = 3(- 8 x + 3)
\item 
-7(6 x - 6) = - 4 x + 5
\item 
-10(10 x + 5) = 4(- 8 x + 7)
\item 
4 x - 4 = 10(- 2 x + 9)
\item 
6(- 9 x - 5) = 4(- 3 x - 9)
\item 
-5(5 x - 5) = 4(8 x - 6)
\item 
-9(- 10 x + 6) = -3(- 4 x - 2)
\end{enumerate} 
\end{multicols} 
\end{aufgabe} 
