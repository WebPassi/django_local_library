\usepackage{amsmath}  



\newtheoremstyle{note} 
{16pt}  % Platz zwischen Kopf und voherigem Text 
{16pt}  % und nachfolgendem Text 
{}     % Schriftart des Koerpers 
{}     % mit \parindent Einzug 
{\bf}  % Schriftart des Kopfes 
{:}     % Nach Bedarf z.B. Doppelpunkt nach dem Kopf 
{0.5em} % Platz zwischen Kopf und Koerper 
{}     % Kopfname 

\theoremstyle{note} 
\newtheorem{aufgabe}{Aufgabe} 



\begin{document}
\begin{flushleft}
\begin{aufgabe} ~ \ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item $3 x + 2 = 0$\\

\item $5 x + 4 = 0$\\

\item $3 x + 4 = 0$\\

\end{enumerate} 
\end{multicols} 
\end{aufgabe}\vspace{1em}\begin{aufgabe} ~ \ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item $2 x + 5 = 5$\\

\item $x + 2 = 4$\\

\item $- 3 x = -4$\\

\end{enumerate} 
\end{multicols} 
\end{aufgabe}\vspace{1em}\begin{aufgabe} ~ \ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item $x^{2} -22 = 0$\\
\item $x^{2} -22 = 0$\\
\item $x^{2} + 7 = 0$\\
\end{enumerate} 
\end{multicols} 
\end{aufgabe}\vspace{1em}\begin{aufgabe} ~ \ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item $- 2 x^{2} + 1 = 0$\\
\item $- x^{2} -5 = 0$\\
\item $x^{2} -2 = 0$\\
\end{enumerate} 
\end{multicols} 
\end{aufgabe}\vspace{1em}\begin{aufgabe} ~ \ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item $x^{2} - x = 0$\\
\item $3 x^{2} + 5 x = 0$\\
\item $- 3 x^{2} - 3 x = 0$\\
\end{enumerate} 
\end{multicols} 
\end{aufgabe}\vspace{1em}\begin{aufgabe} ~ \ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item $x^{2} + 3 = 0$\\
\item $x^{2} - 3 x + 1 = 0$\\
\item $x^{2} + 5 x -1 = 0$\\
\end{enumerate} 
\end{multicols} 
\end{aufgabe}\vspace{1em}\begin{aufgabe} ~ \ 
\begin{multicols}{3} 
\begin{enumerate}[a)] 
\item $4 x^{2} + 3 x + 1 = 0$\\
\item $x^{2} + 5 x -4 = 0$\\
\item $2 x^{2} + x -4 = 0$\\
\end{enumerate} 
\end{multicols} 
\end{aufgabe}\vspace{1em}
\end{flushleft} 
